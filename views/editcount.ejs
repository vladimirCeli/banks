<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
      integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk"
      crossorigin="anonymous"
    />
    <title>Caja de Ahorro</title>
  </head>
  <body>
    <br />
    <br />
    <% if (propietario) { %>
    <div class="container mt-4">
      <div class="card border-secondary bg-dark">
        <div class="card-header text-white d-flex justify-content-center">
          Editar Registro Cuentas
        </div>
        <div class="card-body">
          <form action="/updatecount" method="POST">
            <input type="id" name="id" value="<%= propietario.id %>" hidden />
            <div class="mb-3">
              <label for="propietario" class="form-label text-light"
                >Propietario</label
              >
              <input
                type="text"
                class="form-control"
                id="propietario"
                name="propietario"
                value="<%= propietario.propietario %>"
                tabindex="1"
              />
            </div>
            <div class="mb-3">
              <label for="numero" class="form-label text-light">NÃºmero</label>
              <input
                type="text"
                class="form-control"
                id="numero"
                name="numero"
                value="<%=propietario.numero %>"
              />
            </div>
            <div class="mb-3">
              <label for="tipodeCuenta" class="form-label text-light"
                >Tipo de cuenta</label
              >
              <select
                name="tipodeCuenta"
                class="form-select"
                aria-label="Defaul select example"
                id="tipodeCuenta"
              >
                <option <%="propietario.tipodeCuenta" %>
                  =='Corriente' ? "selected" : '' %> value="Corriente"
                  >Corriente
                </option>
                <option <%="propietario.tipodeCuenta" %>
                  =='Ahorro' ? "selected" : '' %> value="Ahorro">Ahorro
                </option>
              </select>
            </div>
            <div class="mb-3">
              <label for="idBancoId" class="form-label text-light"></label>
              <select
                name="idBancoId"
                class="form-select"
                aria-label="Defaul select example"
                id="idBancoId"
              >
                <% resul.forEach((count)=> { %>
                <option <%="propietario.idBancoId" %>
                  =='<%= count.id %>' ? "selected" : '' %> value="<%= count.id
                  %>"> <%= count.nombre %>
                </option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="idClienteId" class="form-label text-light"></label>
              <select
                name="idClienteId"
                class="form-select"
                aria-label="Defaul select example"
                id="idClienteId"
              >
                <% re.forEach((count)=> { %>
                <option <%="propietario.idClienteId" %>
                  =='<%= count.id %>' ? "selected" : '' %> value="<%= count.id
                  %>"> <%= count.nombre %>
                </option>
                <% }) %>
              </select>
            </div>
            <br />
            <div class="form-group d-flex justify-content-center gap-2">
              <button type="submit" class="btn btn-primary" tabindex="5">
                Guardar
              </button>
              <a href="/listcount" class="btn btn-secondary">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
